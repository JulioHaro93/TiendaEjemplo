@model IEnumerable<APPTienda.Models.Articulo>
@{
    ViewData["Title"] = "Categorías de productos de la tienda";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-4">
        <h3>Lista de Artículos</h3>
    </div>
</div>

<div>
    @if (Model.Count() > 0)
    {
        <table class="table table-striped border">

            <tr>
                <th>sku</th>
                <th>NombreProducto</th>
                <th>NumMaterial</th>
                <th>Categoría</th>
                <th>Inventario</th>
            </tr>
            @foreach (var articulo in Model)
            {
                <tr>
                    <td>@articulo.Sku</td>
                    <td>@articulo.NombreProducto</td>
                    <td>@articulo.NumMaterial</td>
                    <td>@articulo.Categoria</td>
                    <td>@articulo.Inventario</td>
                    <td>
                        <a class="btn btn-primary txt-white" asp-action="Editar" asp-route-Id="@articulo.Sku">Editar</a>
                        <a class="btn btn-primary txt-white" asp-action="Borrar" asp-route-Id="@articulo.Sku">Borrar</a>
                    </td>
                </tr>
            }

        </table>
    }
    else
    {
        <p>No Hay Artículos</p>
    }
</div>