@model IEnumerable<APPTienda.Models.SubCategoria>
@{
    ViewData["Title"] = "Lista de Sub Categorías";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-4">
        <h3>Lista de Categorías</h3>
    </div>
    <div class="col-3">
        <a asp-action="Crear" class="btn btn-primary form-control">Crear Categoría</a>
    </div>
</div>

<div>
    @if (Model.Count() > 0)
    {
        <table class="table table-striped border">

            <tr>
                <th>Nombre de Categoría</th>
                <th>Identificador de la categoría</th>
            </tr>
            @foreach (var subCategoria in Model)
            {
                <tr>
                    <td>@subCategoria.Nombre</td>
                    <td>@subCategoria.Ticket_NumSub</td>
                    <td>
                        <a class="btn btn-primary txt-white" asp-action="Editar" asp-route-Id="@subCategoria.Id_SubCategoria">Editar</a>
                        <a class="btn btn-primary txt-white" asp-action="Borrar" asp-route-Id="@subCategoria.Id_SubCategoria">Borrar</a>
                    </td>
                </tr>
            }

        </table>
    }
    else
    {
        <p>No Hay categorías</p>
    }
</div>