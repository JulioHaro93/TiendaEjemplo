@model APPTienda.ViewModels.CategoriaSubCategoriaViewModel
@{
    ViewData["Title"] = "Editar SubCategoría";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<h3 class="text-center">Editar SubCategoría</h3>
<form method="post" asp-action="Editar">
    <input type = "hidden" asp-for="SubCategoria.Id_SubCategoria" />
    <div class="row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-12 mt-4">
            <div class="row">
                <div class="col-4">
                    <label asp-for="SubCategoria.Nombre"></label>
                </div>
                <div class="col-8">
                    <input asp-for="SubCategoria.Nombre" class="form-control" />
                    <span asp-validation-for="SubCategoria.Nombre" class="text-danger"></span>
                </div>
            </div>
            <div class="col-4">
                <label asp-for="SubCategoria.Categoria"></label>

                <div class="col-8">
                    @Html.DropDownListFor(u => u.SubCategoria.Id_Categoria, Model.ListadeCategorias, "Elija Una Categoría", new {@class= "form-control"})

                </div>
            </div>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-3">
            <a asp-action="Index">Volver a lista</a>
        </div>
        <div class="col-5 offset-4">
            <button type="submit" class="btn btn-primary form-control">Crear</button>
            &nbsp;
        </div>
    </div>
</form>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}